
<%- include("partials/header"); -%>
<body>
  <div class="container">
    <hr class="homehr">
    <br>
    <h1>Home</h1>
    <%if(startingContent.name==="首頁"){%>
    <p><%= startingContent.content %></p>
    <%}else{%>
    <p><%= startingContent[0].content %> </p>
     <br>
     <hr class="homehr">
    <%for(let i=1;i<startingContent.length;i++){ %>
     <br>
     <nobr><h1><span>🧸&emsp;</span><%=startingContent[i].name%></h1></nobr>
     <p>
     <br>
     <%=startingContent[i].content.substring(0, 100) + " ..."%>
     <a href="/posts/<%=startingContent[i].name%>">Read More</a>
     </p>
     <br>
     <hr class="dot" >
   <%}}%>
 </div>
 </body>


