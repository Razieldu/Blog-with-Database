
<%- include("partials/header"); -%>
<body>
  <div class="container main">
    <hr class="homehr">
    <div class="row">

      <div class="col-sm-12 col-md-12 col-lg-6 introdiv ">

      <h1 class="intro">歡迎來到Jeremy的部落格</h1>

      </div>

      <div class="col-sm-12 col-md-6 col-lg-6">
        <div class="row">
        <h2 class="weatherhead ">現時天氣</h2>
        <%for(i=0;i<4;i++){%>
        <div class="col-sm-3 col-md-6 col-lg-3 weatherdata ">
         <p class="cityname"><%=cityName[i].name%></p>
        <img src="<%=cityIcon[i]%>" class="weather">
        <p class="citytemp" ><%=cityName[i].main.temp%>°C</p>
        </div>
        <%}%>
      </div>
    </div>
     <br>
     <hr class="homehr">
    </div>
    <%for(let i=0;i<startingContent.length;i++){ %>
     <br>
     <nobr><h1><span>🧸&emsp;</span><%=startingContent[i].name%></h1></nobr>
     <p>
     <br>
     <%=startingContent[i].content.substring(0, 50) + " ..."%>
     <a href="/posts/<%=startingContent[i].name%>">Read More</a>
     </p>
     <br>
     <hr class="dot" >


   <%}%>

 </div>

 </body>


